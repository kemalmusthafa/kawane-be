# Kawane Studio Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/kawane_studio"
DIRECT_URL="postgresql://username:password@localhost:5432/kawane_studio"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"
BASE_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"

# Email Configuration (Optional)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="Kawane Studio <noreply@kawanestudio.com>"

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# ✅ NEW: Cache Configuration (Limit-friendly)
CACHE_ENABLED=true
CACHE_TTL_DASHBOARD=300
CACHE_TTL_PRODUCTS=1800
CACHE_TTL_USERS=1800
CACHE_MAX_SIZE=50

# ✅ NEW: Performance Configuration (Limit-friendly)
FUNCTION_TIMEOUT=30000
MAX_CONNECTIONS=10

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Rate Limiting Configuration
EMAIL_RATE_LIMIT_WINDOW_MS=86400000
EMAIL_RATE_LIMIT_MAX_REQUESTS=10
EMAIL_RATE_LIMIT_WINDOW_MS_HOURLY=3600000
EMAIL_RATE_LIMIT_MAX_REQUESTS_HOURLY=5

# Auth Rate Limiting Configuration
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=20

# API Rate Limiting Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=200

# Search Rate Limiting Configuration
SEARCH_RATE_LIMIT_WINDOW_MS=60000
SEARCH_RATE_LIMIT_MAX_REQUESTS=30

# WhatsApp Configuration (Optional - for future WhatsApp Business API)
# WHATSAPP_API_URL="https://graph.facebook.com/v18.0"
# WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
# WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
# WHATSAPP_BUSINESS_ACCOUNT_ID="your-business-account-id"
# WHATSAPP_WEBHOOK_VERIFY_TOKEN="your-webhook-verify-token"

# Payment Gateway Configuration (Optional - for future integrations)
# XENDIT_SECRET_KEY="your-xendit-secret-key"
# XENDIT_PUBLIC_KEY="your-xendit-public-key"
# DOKU_CLIENT_ID="your-doku-client-id"
# DOKU_CLIENT_SECRET="your-doku-client-secret"

# Admin Configuration
ADMIN_EMAIL="admin@kawanestudio.com"
ADMIN_PASSWORD="admin123"

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN="http://localhost:3000"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Notification Configuration
NOTIFICATION_RETENTION_DAYS=30

# Order Configuration
ORDER_EXPIRY_HOURS=24
PAYMENT_TIMEOUT_MINUTES=15

# Inventory Configuration
LOW_STOCK_THRESHOLD=10
STOCK_ALERT_ENABLED=true

# Analytics Configuration (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY="your-analytics-api-key"

# Monitoring Configuration (Optional)
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Development Configuration
DEBUG_MODE=true
VERBOSE_LOGGING=false
MOCK_PAYMENTS=false

# Production Configuration (uncomment for production)
# NODE_ENV="production"
# DEBUG_MODE=false
# VERBOSE_LOGGING=false
# MOCK_PAYMENTS=false




